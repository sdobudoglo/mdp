@model List<mdp.Models.Cart>

<h2>Корзина товаров</h2>

@if (Model != null && Model.Count > 0)
{
    foreach (var product in Model)
    {
        <table>
            <tr>
                <label><h4>@product.ProductName</h4></label>
            </tr>
            <tr>
                @using (Html.BeginForm("AddToCart", "Cart", new { product_id = product.ProductId, product_name = product.ProductName }, FormMethod.Post, new { @class = "form-inline my-2 my-lg-0", role = "form" }))
                {
                    <button class="btn btn-secondary" style="margin: 5px"  type="submit">
                        <img src="/Product_images/icons/add_circle-24px.svg" style="width: 20px"  >
                    </button>
                }
            </tr>
            <tr>
                <label><h4>@product.Amount</h4></label>
            </tr>
            <tr>
                @using (Html.BeginForm("RemoveFromCart", "Cart", new { product_id = product.ProductId }, FormMethod.Post, new { @class = "form-inline my-2 my-lg-0", role = "form" }))
                {
                    <button class="btn btn-secondary" style="margin-left: 5px" type="submit">
                        <img src="/Product_images/icons/remove_circle-24px.svg" style="width:20px">
                    </button>
                }
            </tr>
            <tr>
                @using (Html.BeginForm("RemoveFromCart", "Cart", new { product_id = product.ProductId, all_amount = true }, FormMethod.Post, new { @class = "form-inline my-2 my-lg-0", role = "form" }))
                {
                    <button class="btn btn-secondary" type="submit">
                        <img src="/Product_images/icons/clear-24px.svg" style="width: 20px">
                    </button>
                }
            </tr>
        </table>

        <br />
    }

    <a class="btn btn-primary" href="@Url.Action("MakeOrder", "Cart")">Оформить заказ</a>
}
else
{
    <h3><b>Ваша корзина пуста</b></h3>
}

